<%- include('partials/header', { title: title }) %>

<h1>My Orders</h1>

<% if (orders.length === 0) { %>
    <p>You have no orders yet.</p>
<% } else { %>
    <div class="orders-list">
        <% orders.forEach(order => { %>
            <div class="order-item" style="border: 1px solid #ddd; padding: 1rem; margin-bottom: 1rem; border-radius: 8px;">
                <h4>Order ID: <%= order._id %></h4>
                <p><strong>Date:</strong> <%= order.createdAt.toLocaleDateString() %></p>
                
                <% if (userRole === 'vendor') { %>
                    <p><strong>Supplier:</strong> <%= order.supplier.name %></p>
                <% } else { %>
                    <p><strong>Vendor:</strong> <%= order.vendor.name %></p>
                <% } %>

                <p><strong>Total Amount:</strong> â‚¹<%= order.totalAmount.toFixed(2) %></p>
                <p><strong>Status:</strong> <span style="font-weight: bold;"><%= order.status %></span></p>

                <h5>Products:</h5>
                <ul>
                    <% order.products.forEach(item => { %>
                        <li><%= item.name %> - Quantity: <%= item.quantity %></li>
                    <% }) %>
                </ul>

                <% if (userRole === 'supplier' && order.status !== 'Delivered' && order.status !== 'Cancelled') { %>
                    <form action="/orders/update-status/<%= order._id %>" method="POST" style="flex-direction: row; align-items: center; gap: 10px; margin-top: 10px;">
                        <select name="status">
                            <option value="Confirmed" <%= order.status === 'Confirmed' ? 'selected' : '' %>>Confirm</option>
                            <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Ship</option>
                            <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Deliver</option>
                            <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancel</option>
                        </select>
                        <button type="submit">Update Status</button>
                    </form>
                <% } %>
            </div>
        <% }) %>
    </div>
<% } %>

<%- include('partials/footer') %>
