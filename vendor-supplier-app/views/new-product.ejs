<%- include('partials/header', { title: 'Add New Product' }) %>

<h1>Add a New Product</h1>
<p>Fill out the details below to list your product in the catalog.</p>

<form action="/products/new" method="POST">
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="4" required></textarea>

    <label for="price">Price per Unit (â‚¹):</label>
    <input type="number" id="price" name="price" step="0.01" required>

    <label for="imageUrl">Image URL:</label>
    <input type="text" id="imageUrl" name="imageUrl" placeholder="https://example.com/image.jpg">
    
    <button type="submit">Add Product</button>
</form>

