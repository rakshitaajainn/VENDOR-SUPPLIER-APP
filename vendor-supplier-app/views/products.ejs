<%- include('partials/header', { title: 'Product Catalog' }) %>

<h1>Product Catalog</h1>
<p>Browse products from all our registered suppliers.</p>

<div class="product-grid">
    <% if (products.length > 0) { %>
        <% products.forEach(product => { %>
            <div class="product-card">
                <img src="<%= product.imageUrl || 'https://via.placeholder.com/250' %>" alt="<%= product.name %>">
                <h2><%= product.name %></h2>
                <p class="description"><%= product.description %></p>
                <p class="price">â‚¹<%= product.price.toFixed(2) %> / unit</p>
                <p class="supplier">Sold by: <%= product.supplier.name %></p>
                <a href="/orders/new/<%= product._id %>" class="btn">Order Now</a>
            </div>
        <% }) %>
    <% } else { %>
        <p>No products have been added yet. Please check back later.</p>
    <% } %>
</div>

<%- include('partials/footer') %>
